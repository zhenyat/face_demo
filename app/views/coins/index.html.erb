<div class="container">
  <h1>Coins</h1>
  <table class='table table-hover'>
    <thead>
        <th><%= Coin.human_attribute_name(:name) %></th>
        <th><%= Coin.human_attribute_name(:code) %></th>
        <th><%= Coin.human_attribute_name(:kind) %></th>
        <th><%= Coin.human_attribute_name(:unicode) %></th>
        <th><%= Coin.human_attribute_name(:avatar) %></th>
        <th><%= "Status" %></th>
        <th><%= "Actions" %><th>
    </thead>

    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.name %></td>
          <td><%= coin.code %></td>
          <td><%= coin.kind %></td>
          <td><%= coin.unicode %></td>
          <% if coin.avatar.attached? %>
            <td ><%= image_tag coin.avatar.variant(resize_to_limit: [30, 30]) %></td>
          <% else %>
            <td></td>
          <% end %>
          <td><%= status_mark coin.status %></td>

          <td><%= render 'shared/index_buttons', resource: coin %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class='row'>
    <div class='col-md-2'>
      <%= link_to "New", new_coin_path, class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
</div>
