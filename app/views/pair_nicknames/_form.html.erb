<%= simple_form_for(@pair_nickname) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :pair %>
    <%= f.input :name %>
    <%= f.input :status %>
    <%= render 'shared/form_actions', f: f, object: @pair_nickname %>
  </div>
<% end %>
