<% if flash.present? %>
  <% flash.each do |key, value| %>
    <% if value.class == String %>
      <div class="alert alert-<%= key %>">
        <%= value.html_safe %>
      </div>
    <% else %>
      <div class="alert alert-<%= key %>">
        <%= value.join("<br/>").html_safe %>
      </div>
      <!--%button.close{"data-dismiss" => "alert"} Close
      -->
    <% end %>
  <% end %>
<% end %>
